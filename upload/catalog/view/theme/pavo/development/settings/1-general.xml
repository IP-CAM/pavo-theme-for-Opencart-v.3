<?xml version="1.0" encoding="UTF-8" ?>
<settings>
	<author>pavotheme</author>
	<name>General</name>
	<id>general</id>
	<icon>fa fa-gear</icon>
	<item>
		<id>default_theme</id>
		<group>Global</group>
		<label>Default Theme</label>
		<type>select</type>
		<wrapper_class>xxx</wrapper_class>
		<default>0</default>
		<multiple>0</multiple>
		<required>0</required>
		<option>
			<text>Enable</text>
			<value>1</value>
		</option>
		<option>
			<text>Disable</text>
			<value>0</value>
		</option>
	</item>
	<item>
		<id>theme_width</id>
		<group>Global</group>
		<label>Width</label>
		<type>text</type>
		<default>auto</default>
		<placeholder>0</placeholder>
		<required>1</required>
		<desc>Enter Layout width, such as 940px or 96%. Put value "auto" -> Layout width is used in stylesheet.css of theme</desc>
	</item>
	<item>
		<id>enable_custom_copyright</id>
		<group>Global</group>
		<label>Enabled Custom Copyright</label>
		<type>radio</type>
		<default>0</default>
		<option>
			<text>Yes</text>
			<value>1</value>
		</option>
		<option>
			<text>No</text>
			<value>0</value>
		</option>
	</item>
	<item>
		<id>copyright_text</id>
		<group>Global</group>
		<label>Copyright</label>
		<type>textarea</type>
		<default><![CDATA[Copyright 2017 pavothemes.com]]></default>
	</item>
	<item>
		<label>Enable Quickview</label>
		<id>quickview</id>
		<type>radio</type>
		<group>Other Settings</group>
		<default>0</default>
		<option>
			<text>Yes</text>
			<value>1</value>
		</option>
		<option>
			<text>No</text>
			<value>0</value>
		</option>
	</item>
	<item>
		<label>Logo Type</label>
		<id>logo_type</id>
		<type>select</type>
		<group>Other Settings</group>
		<default>logo-theme</default>
		<option>
			<text>Logo In Theme</text>
			<value>logo-theme</value>
		</option>
		<option>
			<text>Logo Opencart</text>
			<value>logo-opencart</value>
		</option>
	</item>
	<item>
		<label>Header Layout</label>
		<id>header_layout</id>
		<type>select_header</type>
		<group>Other Settings</group>
	</item>
	<item>
		<label>Footer Layout</label>
		<id>footer_layout</id>
		<type>select_footer</type>
		<group>Other Settings</group>
	</item>
	<item>
		<label>Category Layout</label>
		<id>category_layout</id>
		<type>select_category_layout</type>
		<group>Other Settings</group>
	</item>
	<item>
		<label>Product Layout</label>
		<id>product_layout</id>
		<type>select_product_layout</type>
		<group>Other Settings</group>
	</item>
	<item>
		<label>Offcanvas menu</label>
		<id>offcanvas</id>
		<group>Other Settings</group>
		<default>category</default>
		<type>select</type>
		<option>
			<text>Category</text>
			<value>category</value>
		</option>
		<option>
			<text>Megamenu</text>
			<value>megamenu</value>
		</option>
	</item>
	<item>
		<id>layout</id>
		<label>Layout</label>
		<group>Other Settings</group>
		<default>fullwidth</default>
		<type>select</type>
		<option>
			<text>Full Width</text>
			<value>fullwidth</value>
		</option>
		<option>
			<text>Boxed Large</text>
			<value>boxed-lg</value>
		</option>
	</item>
</settings>