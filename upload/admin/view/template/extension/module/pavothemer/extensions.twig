{% if ( extensions ) %}
	<div class="row">
		{% for extension in extensions %}
			<div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
				<section>
					<div class="extension-preview">
						<a href="{{ extension.url }}">
							<img src="{{ extension.image }}" class="img-responsive" />
						</a>
					</div>
					<div class="extension-name">
						<h4><a href="{{ extension.url }}">{{ extension.name }}</a></h4>
						<div class="row">
							<div class="col-xs-6"><span class="price">{{ extension.currency_symbol }} {{ extension.price }}</span></div>
							<div class="col-xs-6">
								<div class="text-right">
									{% if ( extension.verified ) %}
										<span class="alert-success">{{ entry_verified_text }}</span>
									{% elseif ( extension.verified == false and extension.installed ) %}
										<span class="alert-danger">{{ entry_unverified_text }}</span>
									{% elseif ( extension.installed ) %}
										<span class="alert-info">{{ entry_installed_text }}</span>
									{% else %}
										<span class="alert-danger">{{ entry_uninstalled_text }}</span>
									{% endif %}
								</div>
							</div>
						</div>
					</div>
					<div class="extension-rate">
						<div class="row">
							<div class="col-xs-6">
								{% for i in 1..5 %}
									{% if ( i <= extension.rating ) %}
										<i class="fa fa-star"></i>
									{% else %}
										<i class="fa fa-star-empty"></i>
									{% endif %}
								{% endfor %}
							</div>
							<div class="col-xs-6">
								<div class="text-right">
									{% if ( extension.reviews == 0 or extension.reviews > 1 ) %}
										{{ extension.reviews }} {{ entry_reviews_text }}
									{% else %}
										{{ extension.reviews }} {{ entry_review_text }}
									{% endif %}
								</div>
							</div>
						</div>
					</div>
				</section>
			</div>
		{% endfor %}
	</div>
{% endif %}