					<input type="number" class="bottom" step="any" name="<%= data.field.name %>[margin_bottom]" value="<%= data.settings[data.field.name] && data.settings[data.field.name].margin_bottom != undefined ? data.settings[data.field.name].margin_bottom : '' %>" />
					<input type="number" class="left" step="any" name="<%= data.field.name %>[margin_left]" value="<%= data.settings[data.field.name] && data.settings[data.field.name].margin_left != undefined ? data.settings[data.field.name].margin_left : '' %>" />
					<div class="border">
						<input type="number" class="top" step="any" name="<%= data.field.name %>[border_top]" value="<%= data.settings[data.field.name] && data.settings[data.field.name].border_top != undefined ? data.settings[data.field.name].border_top : '' %>" />
						<input type="number" class="right" step="any" name="<%= data.field.name %>[border_right]" value="<%= data.settings[data.field.name] && data.settings[data.field.name].border_right != undefined ? data.settings[data.field.name].border_right : '' %>" />
						<input type="number" class="bottom" step="any" name="<%= data.field.name %>[border_bottom]" value="<%= data.settings[data.field.name] && data.settings[data.field.name].border_bottom != undefined ? data.settings[data.field.name].border_bottom : '' %>" />
						<input type="number" class="left" step="any" name="<%= data.field.name %>[border_left]" value="<%= data.settings[data.field.name] && data.settings[data.field.name].border_left != undefined ? data.settings[data.field.name].border_left : '' %>" />
						<div class="padding">
							<input type="number" class="top" step="any" name="<%= data.field.name %>[padding_top]" value="<%= data.settings[data.field.name] && data.settings[data.field.name].padding_top != undefined ? data.settings[data.field.name].padding_top : '' %>" />
							<input type="number" class="right" step="any" name="<%= data.field.name %>[padding_right]" value="<%= data.settings[data.field.name] && data.settings[data.field.name].padding_right != undefined ? data.settings[data.field.name].padding_right : '' %>" />
							<input type="number" class="bottom" step="any" name="<%= data.field.name %>[padding_bottom]" value="<%= data.settings[data.field.name] && data.settings[data.field.name].padding_bottom != undefined ? data.settings[data.field.name].padding_bottom : '' %>" />
							<input type="number" class="left" step="any" name="<%= data.field.name %>[padding_left]" value="<%= data.settings[data.field.name] && data.settings[data.field.name].padding_left != undefined ? data.settings[data.field.name].padding_left : '' %>" />
							<div class="content"></div>
						</div>
					</div>
				</div>
			</div>
			<% if ( data.field.desc ) { %>
				<p style="font-style: italic"><%= data.field.desc %></p>
			<% } %>
		</div>
	</div>
</script>

<script type="text/html" id="pa-edit-form-template">

	<div id="pa-inspector" class="modal">
		<div class="modal-dialog modal-lg">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
					<h4 class="modal-title text-info"><i class="fa fa-pencil"></i> <%= data.edit_title %></h4>
				</div>
				<div class="modal-body">
			  		<form method="POST" class="form-horizontal" id="pa-edit-form-settings">
			  			<div class="loading text-center">
			  				<i class="fa fa-spinner fa-spin" aria-hidden="true"></i>
			  			</div>
			  		</form>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-danger pa-close" aria-hidden="true">{{ entry_cancel_text }}</button>
					<button type="button" class="btn btn-info pa-update" aria-hidden="true" form="pa-edit-form-settings">{{ entry_update_text }}</button>
				</div>
			</div>
		</div>
	</div>
</script>

<script type="text/html" id="pa-elements-panel">
	<div id="pa-elements-list" class="pa-elements-list elements-panel modal">
		<div class="modal-dialog modal-lg">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
					<h4 class="modal-title text-info"><i class="fa fa-exclamation-triangle"></i> {{ entry_add_element_text }}</h4>
				</div>
				<div class="modal-body">
					{% if ( groups ) %}
						<ul class="nav nav-tabs">
							<li class="active"><a href="#nav-elements-all" data-toggle="tab" aria-expanded="true">{{ entry_all_text }}</a></li>
					  		{% for tab in groups %}
					  			<li><a href="#nav-{{ tab.slug }}" data-toggle="tab" aria-expanded="true">{{ tab.name }}</a></li>
					  		{% endfor %}
			  			</ul>
				  		<div class="tab-content">
				  			<div id="nav-elements-all" class="tab-pane active"></div>
				  			{% for tab in groups %}
				  				<div id="nav-{{ tab.slug }}" class="tab-pane">
					  				{% for element in elements %}
					  					{% if ( element.group_slug == tab.slug ) %}
					  						<div class="pa-col-sm-3">
							  					<a href="#" class="element element-item element-item-{{ element.code ? element.code : '' }}" data-element_type="{{ element.shortcode ? 'shortcode' : 'module' }}" data-group="{{ tab.slug }}" data-shortcode="{{ element.shortcode }}" data-module-id="{{ element.module_id }}" data-module-code="{{ element.code }}" data-mask="{{ element | json_encode() | escape }}">
						  							<i class="{{ element.icon }}"></i>
						  							<span>{{ element.name }}</span>
						  							{% if ( element.type == 'shortcode' and element.shortcode ) %}
						  								<code>{{ element.shortcode }}</code>
						  							{% else %}
						  								<code>{{ element.code }}.{{ element.module_id }}</code>
						  							{% endif %}
						  						</a>
					  						</div>
					  					{% endif %}
					  				{% endfor %}
				  				</div>
				  			{% endfor %}
				  		</div>
		  			{% endif %}
				</div>
			</div>
		</div>
	</div>
</script>

