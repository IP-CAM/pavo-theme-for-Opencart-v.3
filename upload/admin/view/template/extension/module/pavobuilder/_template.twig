<script type="text/html" id="pa-image-form-field">
	<% var uniqid = new Date().getTime() %>
	<%
		var image = '';
		if ( data.settings[data.field.name] !== undefined ) {
			var lastIndex = new File( [''], data.settings[data.field.name] ).name.lastIndexOf('.');
			var name = data.settings[data.field.name].slice( 0, lastIndex );
			var ext = data.settings[data.field.name].slice( lastIndex );
			image = PA_PARAMS.site_url + 'image/cache/' + name + '-100x100' + ext;
		}
	%>
	<div class="form-group">
		<label class="col-sm-2 control-label"><%= data.field.label %></label>
		<div class="col-sm-10">
			<a href="" id="thumb-<%= uniqid %>" data-toggle="image" class="img-thumbnail" data-original-title="" title="">
				<img src="<%= image %>" />
			</a>
            <input type="hidden" name="<%= data.field.name %>" value="<%= data.settings[data.field.name] %>" id="input-<%= uniqid %>">
			<% if ( data.field.desc ) { %>
				<p style="font-style: italic"><%= data.field.desc %></p>
			<% } %>
		</div>
	</div>
</script>
