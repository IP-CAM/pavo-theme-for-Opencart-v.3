{{ header }}

  	{# start admin panel left sidebar #}
  	{{ column_left }}
  	{# end admin panel left sidebar #}

  	{# start pavo builder control #}
  	<div id="content">

	    <div class="page-header">
	      	<div class="container-fluid">
		        <h1><b>{{ heading_title }}</b></h1>
		        <ul class="breadcrumb">
		          	{% for breadcrumb in breadcrumbs %}
		            	<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
		          	{% endfor %}
		        </ul>
		        <div class="pull-right">
		        	<button type="submit" form="pavohomebuilder-layout-edit" data-toggle="tooltip" title="" class="btn btn-primary" data-original-title="{{ entry_save_text }}"><i class="fa fa-save"></i></button>
		        	{% if ( layout_id ) %}
        				<button type="button" data-toggle="tooltip" title="" class="btn btn-danger" onclick="confirm( '{{ entry_confirm_delete }}' ) ? $('#pavohomebuilder-layout-edit').submit() : false;" data-original-title="Delete"><i class="fa fa-trash-o"></i></button>
        			{% endif %}
		        </div>
	      	</div>
	    </div>

	    <div class="container-fluid">

	      	{% if success %}
            	<div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
              		<button type="button" class="close" data-dismiss="alert">&times;</button>
            	</div>
            {% endif %}
            {% if error_warning %}
            	<div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
              		<button type="button" class="close" data-dismiss="alert">&times;</button>
           		</div>
            {% endif %}

	      	<div class="panel panel-default">
		        <div class="panel-heading"><h3 class="panel-title"><i class="fa fa-exchange"></i> {{ layout_id ? entry_edit_text : entry_add_new_text }}</h3></div>
		        <div class="panel-body">
		          	<form method="POST" id="pavohomebuilder-layout-edit" class="form-horizontal" enctype="multipart/form-data">
		            	<div class="form-group">
		            		<label class="col-sm-2 control-label" for="input-name">{{ entry_module_name }}</label>
		            		<div class="col-sm-10">
		            			<input type="text" name="name" value="{{ layout.name }}" placeholder="{{ entry_module_name }}" id="input-name" class="form-control" />
		            		</div>
		            	</div>
		            	<div class="form-group">
		            		<label class="col-sm-2 control-label" for="status">{{ entry_status_text }}</label>
		            		<div class="col-sm-10">
		            			<select name="status" id="input-status" class="form-control">
	                                <option value="1" selected="selected">{{ entry_enabled_text }}</option>
	                				<option value="0">{{ entry_disabled_text }}</option>
                              </select>
		            		</div>
		            	</div>

		            	<div id="pa-container">
			            	<div class="form-group text-center">
			            		<div class="btn-group button-alignments">
				                    <button class="btn btn-default active" data-option="large-screen" type="button" data-placement="top"><span class="fa fa-desktop"></span></button>
				                    <button class="btn btn-default" data-option="medium-screen" type="button" data-placement="top"><span class="fa fa-laptop"></span></button>
				                    <button class="btn btn-default" data-option="tablet-screen" type="button" data-placement="top"> <span class="fa fa-tablet"></span></button>
				                    <button class="btn btn-default" data-option="mobile-screen" type="button" data-placement="top"><span class="fa fa-mobile"></span> </button>
				                </div>
			            	</div>
			            	<div id="pa-footer">
			            		<div class="pa-buttons">
			            			<a href="#" id="pa-add-element" class="pa-add-element pa-button pa-button-info"><i class="fa fa-plus" aria-hidden="true"></i> {{ entry_add_row_text }}</a>
			            		</div>
			            	</div>
		            	</div>
		            	<textarea class="hidden" id="pavo-home-pagebuilder-content" name="content"></textarea>
		          	</form>
		        </div>
	      	</div>

	    </div>
  	</div>
  	{# end pavo builder control #}

  	{{ underscore_template }}

{{ footer }}